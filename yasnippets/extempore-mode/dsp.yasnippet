# -*- mode: snippet -*-
# name: dsp
# key: dsp
# --
(define-sampler ${1:sampler} sampler-note-hermite sampler-fx)
(define-instrument ${2:synth} synth-note synth-fx)

(bind-func dsp:DSP
  (lambda (in time chan dat)
    (cond ((< chan 2.0)
           (+ ($1 in time chan dat)
              ($2 in time chan dat)))
          (else 0.0))))

(dsp:set! dsp)