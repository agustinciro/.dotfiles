# -*- mode: snippet -*-
# name: define-inst
# key: dinst
# --
(bind-func ${1:name}_note_c
  (lambda ()
    (lambda (time:double chan:double freq:double amp:double)
      $0)))

(bind-func $1_fx
  (lambda (in:double time:double chan:double dat:double*)
    ))

(define-instrument $1 $1_note_c $1_fx)

($1.attack 200.0)
($1.decay 200.0)
($1.release 1000.0)
($1.sustain 0.6)